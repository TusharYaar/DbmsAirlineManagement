<section class="animate__animated animate__fadeInDown">  
    <h1>Passenger Details</h1>
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th>User id</th>
            <th>Username</th>
            <th>Passport No.</th>
            <th>Seat No.</th>
            <th>Ticket No.</th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <%User.forEach(function(user){ %>
          <tr>
            <td><a href="/showusers/<%=user.userid%>"><%=user.userid%></a></td>
            <td><%=user.username%></td>
            <td><%=user.passport_number%></td>
            <td><%=user.seat_number%></td>
            <td><%=user.ticket_number%></td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>
  </section>
  
  
  <section class="animate__animated animate__fadeInUp">
    <h1>Crew Details</h1>
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th>Crew Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Occupation</th>
            
          </tr>
