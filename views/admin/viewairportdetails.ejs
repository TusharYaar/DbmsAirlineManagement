<div class="row">
  <div class="column">
    <div class="card">
      <div class="airportsf">
      Airport&nbsp;Shortname</div>
      <div class="airportsf1">
      <%=desairport[0].curshort%></div>
    
      <div class="airportname">
      Airport&nbsp;Name</div>
      <div class="airportname1">
