<form id="sortfunc" action="/showairports" method="get">    
    <select name="orderby" id="">
    <option value="airport_id">Airport ID</option>
    <option value="airport_city">City</option>
    <option value="airport_state">State</option>
    </select>    
    <select name="order" >
    <option value="ASC">Ascending Order</option>
    <option value="DESC">Descending Order</option>
    </select>
    <button type="submit">Submit</button>
    </form>

<div class="main">
    <h2>Existing Flights</h2>
  <%airports.forEach(function(airport,i){ %>
     <% if(i%2===0) {%><div class="row"> <% } %>
    
  <div class="column">
 <a href="/showairports/<%=airport.airport_id %>">
  <div class="card">
  
    <h3 class="airportheading"><%=airport.airport_id %></h3> 
    <p class="description" style="top: 180px;">Airport Name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;<span><%=airport.airport_name %></span></p>
