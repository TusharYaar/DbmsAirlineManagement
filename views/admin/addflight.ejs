<%- include('../partials/header') %>
    <form action="/addflight" method="post">
        Select Departure Airport <select name="departure" id="departure" required>
       <% airport.forEach(function(airport){ %>
        <option value="<%=airport.airport_id%>"><%= airport.airport_name %></option>
      <% });%>
       </select>
        <br> Set Departure Date :<input type="date" name="departure_date" id="departure_date" required>
        <br> Set Departure Time :<input type="time" format="hh:mm:ss" name="departure_time" required>
        <br>
        <hr> Select Destination Airport <select name="destination" id="destination" required>
        <% airport.forEach(function(airport){ %>
         <option value="<%=airport.airport_id%>"><%= airport.airport_name %></option>
       <% });%>
    </select>
        <br> Set Arrival Date :<input type="date" name="arrival_date" id="arrival_date" required>
        <br> Set Arrival Time :<input type="time" format="hh:mm:ss" name="arrival_time" required>
        <br>
        <hr> price per seat in Rupees:<input type="number" name="price" id="price" required>
        <hr>
        Choose Crew:
        <br>
        Pilot: <select name="pilot" id="pilot" required>
          <% crew.forEach(function(crew){ %>
           <% if(crew.occupation === 'pilot') { %>
            <option value="<%=crew.userid%>"><%=crew.first_name%> <%=crew.last_name%>  ID: <%=crew.userid%> </option>
          <% }});%>
        </select>
        <br> 
        AirHostess: <select name="air_hostess" id="air_hostess" required>
          <% crew.forEach(function(crew){ %>
           <% if(crew.occupation === 'air_hostess') { %>
            <option value="<%=crew.userid%>"><%=crew.first_name%> <%=crew.last_name%>  ID: <%=crew.userid%> </option>
          <% }});%>
        </select>
        <br>
        Technician: <select name="technician" id="technician" required>
          <% crew.forEach(function(crew){ %>
           <% if(crew.occupation === 'technician') { %>
            <option value="<%=crew.userid%>"><%=crew.first_name%> <%=crew.last_name%>  ID: <%=crew.userid%> </option>
          <% }});%>
        </select>
        <button type="submit">Submit</button>
    </form>

    Goto <a href="/dashboard"> Dashboard</a>

